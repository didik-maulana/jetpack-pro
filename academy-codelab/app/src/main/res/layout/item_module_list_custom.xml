<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4">

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:contentDescription="@string/description_img_circle_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_circle_black" />

    <TextView
        android:id="@+id/tv_module_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_8"
        android:ellipsize="end"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/img_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_circle"
        app:layout_constraintTop_toTopOf="@id/img_circle"
        tools:text="@string/example" />
</androidx.constraintlayout.widget.ConstraintLayout>
